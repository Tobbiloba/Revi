# Revi Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/revi_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=revi_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# API Configuration
API_BASE_URL=http://localhost:4000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Environment Settings  
NODE_ENV=development
DEBUG=true

# Security
JWT_SECRET=your-jwt-secret-key-here
API_RATE_LIMIT=1000
MAX_PAYLOAD_SIZE=10mb

# Data Retention
ERROR_RETENTION_DAYS=30
SESSION_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# External Services
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ENABLE_ALERTS=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT_MS=5000

# Performance Settings
MAX_BATCH_SIZE=100
UPLOAD_QUEUE_SIZE=1000
COMPRESSION_ENABLED=true

# Development Settings
MOCK_EXTERNAL_SERVICES=false
ENABLE_CORS_DEBUG=false
SQL_LOGGING=false

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# DATABASE_URL=postgres://user:password@hostname:5432/revi_production
# CORS_ORIGINS=https://your-frontend-domain.com
# SQL_LOGGING=false